<%- include('partials/header') %>

<div class="container-fluid flex-wrapper-main index-container">
  <div class="row header-row">
    <div class="col-12 col-lg-6  header-logo-container"></div>
    <div class="col-12 col-lg-6 carousel-container index-section">
      <div id="carouselCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="card">
              <img src="./images/<%-newsArray[0].image %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%-newsArray[0].title %></h5>
                  <p class="card-text"><%-newsArray[0].description %></p>
              </div>
            </div>
          </div>
          <% for (let i=1 ; i<newsArray.length ; i++) {%>
          <div class="carousel-item">
            <div class="card">
              <img src="./images/<%-newsArray[i].image %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title"><%-newsArray[i].title %></h5>
                <p class="card-text"><%-newsArray[i].description %></p>
              </div>
            </div>
          </div>
          <% } %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselCaptions" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselCaptions" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>

</div>

<%- include('partials/footer') %>
